@using Zidium.UserAccount.Helpers

@model Zidium.UserAccount.Models.SslCertificateExpirationDateChecksModels.EditModel

@{
    ViewBag.Title = (Model.Id.HasValue ? "Настройка" : "Добавление") + " проверки SSL-сертификата";
}

@Html.Partial("_PageTitle")

<form class="form-horizontal" method="POST" id="myForm">
    @Html.Partial("~/Views/Checks/EditCheckCommonSettings.cshtml", Model)
    <hr />
    <br />
    <div class="form-group">
        @Html.RequiredLabelFor(x => x.Url, null, "col-sm-3")
        <div class="col-sm-6">
            @Html.TextBoxFor(x => x.Url, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.RequiredLabelFor(x => x.AlarmDaysCount, null, "col-sm-3")
        <div class="col-sm-3">
            @Html.TextBoxFor(x => x.AlarmDaysCount, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.RequiredLabelFor(x => x.WarningDaysCount, null, "col-sm-3")
        <div class="col-sm-3">
            @Html.TextBoxFor(x => x.WarningDaysCount, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-3"></div>
        <div class="col-sm-3">
            <div class="btn-group ">
                <button value="Сохранить" class="btn btn-primary">Сохранить</button>
            </div>
        </div>
    </div>
</form>