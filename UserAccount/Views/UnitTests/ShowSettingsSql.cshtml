@using Zidium.UserAccount.Helpers
@using Zidium.UserAccount.Models.UnitTests
@model ShowSettingsSqlModel
@{ 
    string periodText = GuiHelper.TimeSpanAsString(Model.Period);
    string commandTimeoutText = GuiHelper.TimeSpanAsString(Model.CommandTimeout);
    string connectionTimeoutText = GuiHelper.TimeSpanAsString(Model.OpenConnectionTimeout);
}

<div class="col-md-8 tiles-column">
    <div class="tiles-box" style="display: flex; flex-direction:column;">
        <div style="flex: 1 0 auto;">
            <div class="tiles-box-header1">Настройки SQL</div>
            <div class="tiles-box-content">
                <p>
                    <span class="simple-text-header">Период проверки</span>
                    <br />
                    <span class="simple-text-value">@periodText</span>
                </p>
                <p>
                    <span class="simple-text-header">Таймаут открытия соединения</span>
                    <br />
                    <span class="simple-text-value">@connectionTimeoutText</span>
                </p>
                <p>
                    <span class="simple-text-header">Таймаут выполнения запроса</span>
                    <br />
                    <span class="simple-text-value">@commandTimeoutText</span>
                </p>
                <p>
                    <span class="simple-text-header">Провайдер</span>
                    <br />
                    <span class="simple-text-value">@Model.Provider</span>
                </p>
                <p>
                    <span class="simple-text-header">Строка подключения</span>
                    <br />
                    <span class="simple-text-value">@Model.ConnectionString</span>
                </p>
                <p>
                    <span class="simple-text-header">SQL-запрос</span>
                    <br />
                    <div style="white-space: pre">@Model.Sql</div>
                </p>
            </div>
        </div>
        <div style="flex: 0 0 auto;">
            <div class="tiles-box-content">
                <div class="btn-group" role="group" aria-label="...">
                    <a href="@Url.Action("Edit", "Checks", new { id = Model.UnitTestId })" class="btn btn-default">
                        <span class="glyphicon glyphicon-cog" aria-hidden="true" style="margin-right: 10px;"></span>Настроить
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
