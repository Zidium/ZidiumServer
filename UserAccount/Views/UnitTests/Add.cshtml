@using Zidium.UserAccount.Helpers
@using Zidium.UserAccount.Models.Controls
@model Zidium.UserAccount.Models.UnitTestAddModel

@{
    ViewBag.Title = "Добавление пользовательской проверки";
    ViewBag.ActiveMenuItems = "UnitTests";
}

@Html.Partial("_PageTitle")

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.MyValidationSummaryVertical()

    @Html.EditorFor(m => m.DisplayName, "LabeledEdit", new { HorizontalForm = true })
    @Html.EditorFor(m => m.UnitTestTypeId, "LabeledEdit", new { HorizontalForm = true })

    <div class="form-group">
        @Html.LabelFor(m => m.ComponentId, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-4">
            @Html.ComponentSelector(x => x.ComponentId, new ComponentSelectorOptions()
            {
                ShowAsList = false,
            }.SetShowCreateNewButton(null, null, null))
        </div>
        <div class="col-sm-6">
            @Html.ValidationMessageFor(m => m.ComponentId, null, null, "p")
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <input type="submit" value="Добавить" class="btn btn-primary" />
            @Html.ActionLink("Вернуться к списку", "Index", null, new { @class = "btn btn-default" })
        </div>
    </div>
}

@section Scripts
{
    @Scripts.Render("~/Scripts/AllControls")
}