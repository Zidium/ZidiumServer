@model Zidium.UserAccount.Models.ComponentMiniStatusModel

<div class="miniBadge miniBadgeBorder">
    @if (Model.Alarm != 0)
    {
        <span class="badge" style="background-color: #d9534f">@Model.Alarm</span>
    }
    else
    {
        <span class="text-danger">@Model.Alarm</span>
    }
</div>

<div class="miniBadge miniBadgeBorder">
    @if (Model.Warning != 0)
    {
        <span class="badge" style="background-color: #f0ad4e">@Model.Warning</span>
    }
    else
    {
        <span class="text-warning">@Model.Warning</span>
    }
</div>

<div class="miniBadge miniBadgeBorder">
    @if (Model.Success != 0)
    {
        <span class="badge" style="background-color: #5cb85c">@Model.Success</span>
    }
    else
    {
        <span class="text-success">@Model.Success</span>
    }
</div>

<div class="miniBadge">
    @if (Model.Unknown != 0)
    {
        <span class="badge" style="background-color: #999">@Model.Unknown</span>
    }
    else
    {
        <span class="text-muted">@Model.Unknown</span>
    }
</div>
