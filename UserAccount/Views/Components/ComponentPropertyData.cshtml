@model Zidium.Storage.ComponentPropertyForRead

<td>@Html.ActionLink(Model.Name, "EditProperty", "Components", new { id = Model.Id }, new { onclick = "ModalBtnClick(this, event);" })</td>
<td><span class="text-prewrap">@Model.Value</span></td>
<td>@Model.DataType</td>
<td class="text-center">
    <a href='@Url.Action("DeleteProperty", new {id = Model.Id.ToString()})' class="text-danger" onclick=" ModalBtnClick(this, event); " title="Удалить свойство">
        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
    </a>
</td>