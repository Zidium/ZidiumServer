@using Zidium.UserAccount.Helpers

@model Zidium.UserAccount.Models.VirusTotal.EditModel

@{
    ViewBag.Title = Model.Id.HasValue ? "Настройка проверки VirusTotal" : "Добавление проверки VirusTotal";
}

@Html.Partial("_PageTitle")

<form class="form-horizontal" method="POST" id="myForm">
    @Html.Partial("~/Views/Checks/EditCheckCommonSettings.cshtml", Model)
    <hr />
    <br />
    <div class="form-group">
        @Html.RequiredLabelFor(x => x.Url, null, "col-sm-3")
        <div class="col-sm-6">
            @Html.TextBoxFor(x => x.Url, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.RequiredLabelFor(x => x.ApiKey, null, "col-sm-3")
        <div class="col-sm-6">
            @Html.TextBoxFor(x => x.ApiKey, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-6 col-sm-offset-3">
            <a href='@(Model.CommonWebsiteUrl + "/wiki/how-to/unittests/system-unittests/virus-total")' target="_blank">
                Как получить ApiKey?
            </a>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-3"></div>
        <div class="col-sm-3">
            <div class="btn-group ">
                <button value="Сохранить" class="btn btn-primary">Сохранить</button>
            </div>
        </div>
    </div>
</form>


@section Scripts
{
    @Scripts.Render("~/Scripts/AllControls")
}
