@model Zidium.UserAccount.Models.BooleanButtonModel

<input id="@Model.Name" type="button" data-filter="true" class="btn btn-default" />

<script type="text/javascript">
    $(function () {
        var control = $('#@Model.Name');
        var booleanButton = new BooleanButton(control, '@(Model.FalseIsNull ? "1" : "0")',
            '@Model.CaptionTrue', '@Model.CaptionFalse',
            '@(Model.Value ? "1" : "0")',
            function () {
                if ('@Model.AutoRefreshPage.ToString()' == 'True') {
                    document.location.href = SetQueryParamFromControl(document.location.href, control);
                }
            });
    });
</script>