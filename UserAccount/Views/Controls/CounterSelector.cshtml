@using Zidium.UserAccount.Helpers
@using Zidium.UserAccount.Models
@model CounterSelectorModel

@if (Model.Expression == null)
{
    @Html.DropDownList(@Model.Name, GuiHelper.GetAccountMetricTypes(Model.CounterId, Model.ComponentId, Model.AllowEmpty), new { @class = "form-control", id = @Model.Name, data_filter = !Model.HideWhenFilter ? "true" : "false" })
}
else
{
    @Model.HtmlHelper.DropDownListFor(Model.Expression, GuiHelper.GetAccountMetricTypes(Model.CounterId, Model.ComponentId, Model.AllowEmpty), new { @class = "form-control", id = @Model.Name, data_filter = !Model.HideWhenFilter ? "true" : "false" })
}

<script>
    $(function () {
        var control = $('#@Model.Name');
        var counterSelector = new CounterSelector(control, function() {
            if ('@Model.AutoRefreshPage.ToString()' == 'True') {
                document.location.href = SetQueryParamFromControl(document.location.href, control);
            }
        });
    });
</script>