@model Zidium.UserAccount.Models.TextFilterModel

<input id="@Model.Name" name="@Model.Name" type="text" class="form-control" placeholder="@Model.Placeholder" data-filter='@(!Model.HideWhenFilter ? "true" : "false")' value="@Model.Value" />

<script type="text/javascript">
    $(function () {
        var control = $('#@Model.Name');
        var textFilter = new TextFilter(control, '@Model.Value', function () {
                if ('@Model.AutoRefreshPage.ToString()' == 'True') {
                    document.location.href = SetQueryParamFromControl(document.location.href, control);
                }
            });
    });
</script>