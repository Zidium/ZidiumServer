@model Zidium.UserAccount.Models.DeleteDialogAjaxModel
    
<div class="alert alert-danger">@Model.Message</div>

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal smart-block-form" }))
{
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.Message)
    
    <div class="text-center">
        <button type="submit" class="btn btn-danger smart-button smart-block-button" data-smart-button-loader="white">Удалить</button>
        <button type="button" class="btn btn-default smart-button" data-dismiss="modal">Отмена</button>
    </div>
}