@using Zidium.UserAccount.Helpers
@model Zidium.UserAccount.Models.AddLogModel
           
<style>
    #form-add-log .smart-col-labels {
        min-width: 110px;
    }
</style>

<div class="alert alert-info">Укажите данные новой записи лога для компонента @Model.DisplayName</div>

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal smart-block-form", id = "form-add-log" }))
{
    @Html.HiddenFor(m => m.ComponentId)

    <div class="smart-container bottom20px">
        @Html.MyValidationSummary()

        @Html.EditorFor(m => m.LogDate, "SmartEdit")
        @Html.EditorFor(m => m.LogLevel, "SmartEdit")
        @Html.EditorFor(m => m.Message, "SmartEdit")

    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary smart-button smart-block-button" data-smart-button-loader="blue">Добавить</button>
        <button type="button" class="btn btn-default smart-button" data-dismiss="modal">Отмена</button>
    </div>
}