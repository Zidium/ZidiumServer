@using Zidium.UserAccount.Helpers

@model Zidium.UserAccount.Models.TcpPortChecksModels.EditModel

@{
    ViewBag.Title = Model.Id.HasValue ? "Настройка проверки tcp порта" : "Добавление проверки tcp порта";
}

@Html.Partial("_PageTitle")

<form class="form-horizontal" method="POST" id="myForm">
    @Html.Partial("~/Views/Checks/EditCheckCommonSettings.cshtml", Model)
    <hr />
    <br />
    <div class="form-group">
        @Html.RequiredLabelFor(x => x.Host, null, "col-sm-3")
        <div class="col-sm-6">
            @Html.TextBoxFor(x => x.Host, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.RequiredLabelFor(x => x.Port, null, "col-sm-3")
        <div class="col-sm-3">
            @Html.TextBoxFor(x => x.Port, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.RequiredLabelFor(x => x.Opened, null, "col-sm-3")
        <div class="col-sm-3">
            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(x => x.Opened)
                    @Html.DisplayNameFor(x => x.Opened)
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-3"></div>
        <div class="col-sm-3">
            <div class="btn-group ">
                <button value="Сохранить" class="btn btn-primary">Сохранить</button>
            </div>
        </div>
    </div>
</form>