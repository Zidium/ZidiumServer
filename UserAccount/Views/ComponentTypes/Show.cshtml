@using Zidium.UserAccount.Helpers
@model Zidium.UserAccount.Models.ComponentTypeEditModel

@{
    ViewBag.Title = "Просмотр типа компонента";
    ViewBag.ActiveMenuItems = "Components,ComponentTypes";
}

@Html.Partial("_PageTitle")

<div class="form-horizontal">
    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            @if (!Model.IsCommon && UserHelper.CurrentUser(Context).CanEditCommonData())
            {
                @Html.ActionLink("Редактировать", "Edit", new { id = Model.Id.ToString() }, new { @class = "btn btn-warning" })
            }
            @Html.ActionLink("Вернуться к списку", "Index", null, new { @class = "btn btn-default" })
        </div>
    </div>

    @if (Model.IsDeleted)
    {
        <div class="alert alert-danger">Этот тип компонента удалён</div>
    }

    @Html.DisplayFor(m => m.Id, "LabeledDisplay", new { HorizontalForm = true })
    @Html.DisplayFor(m => m.DisplayName, "LabeledDisplay", new { HorizontalForm = true })
    @Html.DisplayFor(m => m.SystemName, "LabeledDisplay", new { HorizontalForm = true })
    @Html.DisplayFor(m => m.IsCommon, "LabeledDisplay", new { HorizontalForm = true })
</div>