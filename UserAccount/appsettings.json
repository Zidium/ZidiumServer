// ! НЕ ИЗМЕНЯЙТЕ ЭТОТ ФАЙЛ !
{
  // В этом файле содержатся образцы настроек, и он может обновиться в следующей версии.
  // Задайте свои настройки в файле "appsettings.prod.json"
  // Или используйте "Manage User Secrets" в Visual Studio
  "database": {
    // Postgresql
    "providerName": "Npgsql",
    "connectionString": "Host=localhost;Port=5432;Database=Zidium.Work;Username=postgres;Password=12345;"

    // MsSql
    // "providerName": "System.Data.SqlClient",
    // "connectionString": "Data Source=(LocalDb)\MSSQLLocalDB;Initial Catalog=Zidium.Work;"
  },
  "debugMode": false,
  "useLocalDispatcher": false,
  "dispatcherUrl": "https://localhost:60000/",
  "secretKey": "7031880B-CCCD-4A05-A4DE-6AFADCD7BE6F",

  "Logging": {
    "IncludeScopes": true,
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "None"
    },
    "Debug": {
      "LogLevel": {
        "Default": "Debug"
      }
    },
    "Console": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft": "None"
      },
      "FormatterName": "simple",
      "FormatterOptions": {
        "IncludeScopes": true,
        "TimestampFormat": "dd.MM.yyyy HH\\:mm\\:ss ",
        "SingleLine": true
      }
    },
    "Internal": {
      "LogLevel": {
        "Default": "Trace",
        "Microsoft": "None"
      }
    },
    "NLog": {
      "LogLevel": {
        "Default": "Trace",
        "Microsoft": "None"
      }
    }
  },

  "NLog": {
    "internalLogLevel": "Off",
    "throwExceptions": false,
    "autoReload": true,

    "extensions": [
      {
        "assembly": "NLog.Web.AspNetCore"
      }
    ],

    "variables": {
      "logPath": "${specialfolder:folder=LocalApplicationData}\\Zidium\\Logs\\UserAccount"
    },

    "targets": {
      "File": {
        "type": "File",
        "encoding": "utf-8",
        "layout": "${date:format=yyyy-MM-dd HH_mm_ss} ${logger} ${level::uppercase=true} ${message}",
        "fileName": "${logPath}\\ZidiumUserAccount_${date:format=yyyy-MM-dd}.log",
        "archiveFileName": "${logPath}\\{#}.log",
        "archiveDateFormat": "yyyy-MM-dd",
        "archiveNumbering": "Date",
        "archiveEvery": "Day",
        "maxArchiveFiles": 30
      }
    },

    "rules": [
      {
        "logger": "*",
        "minlevel": "Debug",
        "writeTo": "File"
      }
    ]
  },

  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:60101"
      },
      "Https": {
        "Url": "https://localhost:60001"
      }
    }
  }
}
