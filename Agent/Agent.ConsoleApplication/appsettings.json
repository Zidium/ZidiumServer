// ! НЕ ИЗМЕНЯЙТЕ ЭТОТ ФАЙЛ !
{
  // В этом файле содержатся образцы настроек, и он может обновиться в следующей версии.
  // Задайте свои настройки в файле "appsettings.prod.json"
  // Или используйте "Manage User Secrets" в Visual Studio
  "database": {
    // Postgresql
    "providerName": "Npgsql",
    "connectionString": "Host=localhost;Port=5432;Database=Zidium.Work;Username=postgres;Password=12345;"

    // MsSql
    // "providerName": "System.Data.SqlClient",
    // "connectionString": "Data Source=(LocalDb)\MSSQLLocalDB;Initial Catalog=Zidium.Work;"
  },
  "debugMode": false,
  "useLocalDispatcher": false,
  "dispatcherUrl": "https://localhost:60000/",
  "secretKey": "7031880B-CCCD-4A05-A4DE-6AFADCD7BE6F",
  "dummyMode": false,
  "maximumOfflineInterval": "00:10:00",
  "smtp": {
    "smtpServer": "",
    "smtpPort": 25,
    "smtpLogin": "robot",
    "smtpPassword": "",
    "smtpFrom": "Zidium",
    "smtpUseMailKit": true,
    "smtpUseSsl": false
  },
  "sms": {
    "SmsRuApiId": "",
    "SmsRuFrom": ""
  },
  "telegramBotToken": "",
  "vKontakteAuthToken": "",

  "Logging": {
    "IncludeScopes": true,
    "LogLevel": {
      "Default": "Information"
    },
    "Debug": {
      "LogLevel": {
        "Default": "Debug"
      }
    },
    "NLog": {
      "LogLevel": {
        "Default": "Trace",
        "Microsoft": "None"
      }
    }
  },

  "NLog": {
    "internalLogLevel": "Off",
    "throwExceptions": false,
    "autoReload": true,

    "extensions": [
      {
        "assembly": "Zidium.Core"
      }
    ],

    "variables": {
      "logPath": "${specialfolder:folder=LocalApplicationData}\\Zidium\\Logs\\Agent"
    },

    "targets": {
      "Zidium": {
        "type": "Zidium"
      },
      "Console": {
        "type": "ColoredConsole",
        "layout": "${date:format=dd.MM.yyyy HH\\:mm\\:ss} ${level::uppercase=true} ${message}"
      },
      "File": {
        "type": "File",
        "encoding": "utf-8",
        "layout": "${date:format=yyyy-MM-dd HH_mm_ss} ${logger} ${level::uppercase=true} ${message}",
        "fileName": "${logPath}\\ZidiumAgent_${date:format=yyyy-MM-dd}.log",
        "archiveFileName": "${logPath}\\{#}.log",
        "archiveDateFormat": "yyyy-MM-dd",
        "archiveNumbering": "Date",
        "archiveEvery": "Day",
        "maxArchiveFiles": 30
      }
    },

    "rules": [
      {
        "logger": "Agent",
        "minlevel": "Trace",
        "writeTo": "Zidium"
      },
      {
        "logger": "*",
        "minlevel": "Off",
        "writeTo": "Console"
      },
      {
        "logger": "*",
        "minlevel": "Debug",
        "writeTo": "File"
      }
    ]
  }
}
