{
  // В этом файле содержатся образцы настроек, и он может обновиться в следующей версии.
  // Задайте свои настройки в файле "appsettings.prod.json"
  // Или используйте "Manage User Secrets" в Visual Studio

  // Postgresql
  "workDatabase": {
    "providerName": "Npgsql",
    "connectionString": "Host=localhost;Port=5432;Database=Zidium.Work;Username=postgres;Password=12345;"
  },
  "testDatabase": {
    "providerName": "Npgsql",
    "connectionString": "Host=localhost;Port=5432;Database=Zidium.Test;Username=postgres;Password=12345;"
  },

  // MsSql
  //"workDatabase": {
  //    "providerName": "System.Data.SqlClient",
  //    "connectionString": "Data Source=(LocalDb)\MSSQLLocalDB;Initial Catalog=Zidium.Work;"
  //},
  //"testDatabase": {
  //    "providerName": "System.Data.SqlClient",
  //    "connectionString": "Data Source=(LocalDb)\MSSQLLocalDB;Initial Catalog=Zidium.Test;"
  //},

  "Logging": {
    "IncludeScopes": true,
    "LogLevel": {
      "Default": "Information"
    },
    "Debug": {
      "LogLevel": {
        "Default": "Debug"
      }
    },
    "NLog": {
      "LogLevel": {
        "Default": "Trace",
        "Microsoft": "None"
      }
    }
  },

  "NLog": {
    "internalLogLevel": "Off",
    "throwExceptions": false,
    "autoReload": true,

    "variables": {
      "logPath": "${specialfolder:folder=LocalApplicationData}\\Zidium\\Logs\\DatabaseUpdater"
    },

    "targets": {
      "Console": {
        "type": "ColoredConsole",
        "layout": "${date:format=dd.MM.yyyy HH\\:mm\\:ss} ${level::uppercase=true} ${message}"
      },
      "File": {
        "type": "File",
        "encoding": "utf-8",
        "layout": "${date:format=yyyy-MM-dd HH_mm_ss} ${logger} ${level::uppercase=true} ${message}",
        "fileName": "${logPath}\\ZidiumDatabaseUpdater_${date:format=yyyy-MM-dd}.log",
        "archiveFileName": "${logPath}\\{#}.log",
        "archiveDateFormat": "yyyy-MM-dd",
        "archiveNumbering": "Date",
        "archiveEvery": "Day",
        "maxArchiveFiles": 30
      }
    },

    "rules": [
      {
        "logger": "*",
        "minlevel": "Info",
        "writeTo": "Console"
      },
      {
        "logger": "*",
        "minlevel": "Debug",
        "writeTo": "File"
      }
    ]
  }
}
